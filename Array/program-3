#include<iostream>
using namespace std;

int main(){
	int n,mid,a;
	cout<<"enter the index value of array:"<<endl;
	cin>>n;
	
	int ar[n];
    cout<<"enter the value of array:"<<endl;
	for(int i=0;i<n;i++){
	 cin>>ar[i];
    } 
    
    cout<<"enter the value which find you:"<<endl;
    cin>>a;
    
    int low=0,high=n-1;
    bool found= true;
    
    cout<<"finding mid value:"<<endl;
    
    while(low<=high){
    mid=(low+high)/2;
    if(ar[mid]==a){
        cout<<"code is succesfull and the mid value is:"<<a<<endl;
        found=true;
        break;
    }
    else if(ar[mid]>a){
        low=low;
        high=mid-1;
    }
    else{
        high=high;
        low=mid+1;
    }
    
    }
    if(!found) {
        cout<<"not found "<<endl;
    }
    return 0;
    }

	
